<!-- Header -->
<div>
  <header class="d-flex align-items-center gap-2 mb-3">
    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
      <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2z"/>
      <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8m0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5m0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5m-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0M4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0m0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0"/>
    </svg>
    <h2 class="fw-bold m-0">Classlist Information</h2>
  </header>

  <div class="d-flex">
    <%= render @classlist %>
  </div>
</div>

<!-- Content -->
<div class="border shadow-sm p-4 rounded-4 flex-grow-1 overflow-auto scrollbar-thin mb-3">

  <!-- Student Content -->
  <div class="d-flex align-items-center">
    <h3 class="mb-1 fw-semibold">Student Info</h3>
  </div>
  <div class="card border-0 shadow-sm rounded-4 mb-3 overflow-hidden transition-all">

    <!-- Student Header -->
    <div class="bg-primary text-white d-flex align-items-center justify-content-between p-3"
        role="button"
        data-bs-toggle="collapse"
        data-bs-target="#classlist-student-<%= @classlist.student.id %>"
        aria-expanded="false"
        aria-controls="classlist-student-<%= @classlist.student.id %>">
      <div class="d-flex align-items-center gap-3">
        <div>
          <h4 class="mb-0 fw-semibold"><%= @classlist.student.name %></h4>
          <small class="mb-0 opacity-75">
            <%= @classlist.student.department.name %> - <%= @classlist.student.program %>
          </small>
        </div>
      </div>
      <div class="d-flex align-items-center gap-2">
        <svg fill="#ffffff" width="28px" height="28px" class="collapse-icon opacity-50"
              viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
          <path d="M11.125 16.313l7.688-7.688 3.594 3.719-11.094 11.063
            -11.313-11.313 3.5-3.531z"></path>
        </svg>
      </div>
    </div>

    <!-- Student Body -->
    <div id="classlist-student-<%= @classlist.student.id %>" class="collapse">
      <div class="flex-grow-1 d-flex align-items-center p-4">
        <div class="row w-100 text-center g-3">
          <div class="col-12 col-md-4">
            <p class="text-secondary small mb-1">Year Level</p>
            <h5><%= @classlist.student.year_level %></h5>
          </div>
          <div class="col-12 col-md-4">
            <p class="text-secondary small mb-1">Number of Units</p>
            <h5><%= @classlist.student.number_of_units %></h5>
          </div>
          <div class="col-12 col-md-4">
            <p class="text-secondary small mb-1">Total Assessment</p>
            <h5><%= number_to_currency(@classlist.student.total_assessment, precision: 2, unit: 'â‚±', delimiter:',') %></h5>
          </div>
        </div>
      </div>
      <div class="bg-light d-flex justify-content-end align-items-center gap-2 pt-3 pb-3 pe-4">
        <%= link_to "Edit", edit_student_path(@classlist.student), class: "btn btn-outline-secondary rounded-pill px-3" %>
        <%= link_to "Show", @classlist.student, class: "btn btn-outline-primary rounded-pill px-3" %>
      </div>
    </div>
  </div>

  <!-- Section Content -->
  <div class="d-flex align-items-center">
    <h3 class="mb-1 fw-semibold">Section Info</h3>
  </div>
  <div class="card border-0 shadow-sm rounded-4 mb-3 overflow-hidden transition-all">
  
    <!-- Section Header -->
    <div class="bg-primary text-white d-flex align-items-center justify-content-between p-3"
        role="button"
        data-bs-toggle="collapse"
        data-bs-target="#classlist-section-<%= @classlist.section.id %>"
        aria-expanded="false"
        aria-controls="classlist-section-<%= @classlist.section.id %>">
      <div class="d-flex align-items-center gap-3">
        <div>
          <h4 class="m-0 fw-semibold"><%= @classlist.section.name %></h4>
          <small class="opacity-75">
            Room: <%= @classlist.section.room %> | Time Slot: <%= @classlist.section.time_slot %>
          </small>
        </div>
      </div>
      <div class="d-flex align-items-center gap-2">
        <span class="badge bg-white text-dark rounded-pill fs-6 px-3">
          <%= pluralize(@classlist.section.number_of_students, "Student") %>
        </span>
        <svg fill="#ffffff" width="28px" height="28px" class="collapse-icon opacity-50"
              viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
          <path d="M11.125 16.313l7.688-7.688 3.594 3.719-11.094 11.063
            -11.313-11.313 3.5-3.531z"></path>
        </svg>
      </div>
    </div>
    
    <!-- Section Body -->
    <div id="classlist-section-<%= @classlist.section.id %>" class="collapse">
      <div class="table-responsive p-4 overflow-auto scrollbar-thin">
        <table class="table table-striped table-hover m-0">
          <thead class="sticky-top">
            <tr>
              <th class="text-secondary fw-normal">Name</th>
              <th class="text-secondary fw-normal">Year Level</th>
              <th class="text-secondary fw-normal">Program</th>
              <th class="text-secondary fw-normal">Department</th>
              <th class="text-secondary fw-normal">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @classlist.section.classlists.each do |section| %>
              <tr class="fw-medium">
                <td><%= section.student.name %></td>
                <td><%= section.student.year_level %></td>
                <td><%= section.student.program %></td>
                <td><%= section.student.department.name %></td>
                <td class="d-flex gap-2">
                  <%= link_to "Show", section.student, class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Edit", edit_student_path(section.student), class: "btn btn-sm btn-outline-secondary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="d-flex gap-2 mt-3 align-items-center">
          <%= link_to "Show Section", @classlist.section, class: "btn btn-outline-primary rounded-pill px-3" %>
          <%= link_to "Edit Section", edit_section_path(@classlist.section), class: "btn btn-outline-success rounded-pill px-3" %>
        </div> 
      </div>
    </div>
  </div>
</div>

<!-- Buttons -->
<div class="d-flex justify-content-between">
  <div>
    <%= link_to "Back to classlists", classlists_path, class: "btn btn-secondary" %>
  </div>
  <div class="d-flex gap-3">
    <%= button_to "Destroy this classlist", @classlist, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
    <%= link_to "Edit this classlist", edit_classlist_path(@classlist), class: "btn btn-success" %>
  </div>
</div>
