  <div class="d-flex align-items-center mb-3">
    <h2 class="fw-bold m-0"><%= student.new_record? ? "New Student" : "Edit Student" %></h2>
  </div>

  <div class="border rounded p-3 shadow-sm">          
    <%= form_with(model: student) do |form| %>
      <% if student.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>
    
          <ul>
            <% student.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="mb-3">
        <%= form.label :name, class: "form-label fw-bold" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter student name" %>
      </div>
    
      <div class="mb-3">
        <%= form.label :year_level, class: "form-label fw-bold" %>
        <%= form.number_field :year_level, class: "form-control", placeholder: "Enter year level" %>
      </div>
    
      <div class="mb-3">
        <%= form.label :program, class: "form-label fw-bold" %>
        <%= form.text_field :program, class: "form-control", placeholder: "Enter program" %>
      </div>
    
      <div class="mb-3">
        <%= form.label :department_id, "Department", class: "form-label fw-bold" %>
        <%= form.collection_select :department_id, Department.all, :id, :name, { prompt: "Select a department" },{ class: "form-select" } %>
      </div>
        
      <!-- Buttons -->
      <% if @student.new_record? %>
        <div class="d-flex justify-content-between">
          <div>
            <%= link_to "Back to students", students_path, class: "btn btn-secondary" %>
          </div>
          <div>
            <%= form.submit(student.new_record? ? "Create Student" : "Update Student", class: "btn btn-success") %>
          </div>
        </div>
      <% else %>
        <div class="d-flex justify-content-between">
          <div>
            <%= link_to "Back to students", students_path, class: "btn btn-secondary" %>
          </div>
          <div class="d-flex gap-3">
            <%= link_to "Show this student", @student, class: "btn btn-outline-primary" %>
            <%= form.submit(student.new_record? ? "Create Student" : "Update Student", class: "btn btn-success") %>
          </div>
        </div>
      <% end %>
    
    <% end %>
  </div>