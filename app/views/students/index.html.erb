<% content_for :title, "Students" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div class="d-flex align-items-center">
    <h2 class="fw-bold m-0 me-3">Student List</h1>
    <span class="badge bg-primary rounded-pill fs-6">
      <%= @students.count %>
    </span>
  </div>
  <%= link_to new_student_path, class: "btn btn-success rounded-pill" do %>
    <svg width="26px" height="26px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="#000000">
      <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
      <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
      <line fill="none" stroke="#FFFFFF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="12" x2="12" y1="19" y2="5"></line> <line fill="none" stroke="#FFFFFF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="5" x2="19" y1="12" y2="12"></line>
    </svg>
    <span>New Student</span>
  <% end %>
</div>
<div class="border shadow-sm">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="text-secondary fw-normal">Name</th>
        <th class="text-secondary fw-normal">Year Level</th>
        <th class="text-secondary fw-normal">Program</th>
        <th class="text-secondary fw-normal">Units</th>
        <th class="text-secondary fw-normal">Total Assessment</th>
        <th class="text-secondary fw-normal">Department</th>
        <th class="text-secondary fw-normal">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr class="fw-medium">
          <td><%= student.name %></td>
          <td><%= student.year_level %></td>
          <td><%= student.program %></td>
          <td><%= student.number_of_units %></td>
          <td><%= student.total_assessment %></td>
          <td><%= student.department.name %></td>
          <td class="d-flex gap-2">
            <%= link_to "Show", student, class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "Edit", edit_student_path(student), class: "btn btn-sm btn-outline-secondary" %>
            <%= button_to "Delete", student, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>
