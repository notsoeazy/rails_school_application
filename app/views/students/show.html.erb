<%= render @student %>

<div class="border rounded p-3 shadow-sm mb-3 table-responsive">
  <h3> Subjects List</h3>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="text-secondary fw-normal">Section</th>
        <th class="text-secondary fw-normal">Subject</th>
        <th class="text-secondary fw-normal">Units</th>
        <th class="text-secondary fw-normal">Teacher</th>
      </tr>
    </thead>
    <tbody>
      <% @student.classlists.each do |classlist| %>
        <tr class="fw-medium">
          <td><%= classlist.section.name %></td>
          <td><%= classlist.section.subject.name %></td>
          <td><%= classlist.section.subject.number_of_units %></td>
          <td><%= classlist.section.subject.teacher.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Buttons -->
<div class="d-flex justify-content-between">
  <div>
  <%= link_to "Back to students", students_path, class: "btn btn-secondary" %>
    </div>
  <div class="d-flex gap-3">
    <%= button_to "Destroy this student", @student, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
    <%= link_to "Edit this student", edit_student_path(@student), class: "btn btn-success" %>
  </div>
</div>
