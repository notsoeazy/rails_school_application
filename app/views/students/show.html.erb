<!-- Header -->
<div>
  <header class="d-flex align-items-center gap-2 mb-3">
    <svg fill="#000000" width="50px" height="50px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M9,10h1a1,1,0,0,0,0-2H9a1,1,0,0,0,0,2Zm0,2a1,1,0,0,0,0,2h6a1,1,0,0,0,0-2ZM20,8.94a1.31,1.31,0,0,0-.06-.27l0-.09a1.07,1.07,0,0,0-.19-.28h0l-6-6h0a1.07,1.07,0,0,0-.28-.19.32.32,0,0,0-.09,0A.88.88,0,0,0,13.05,2H7A3,3,0,0,0,4,5V19a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V9S20,9,20,8.94ZM14,5.41,16.59,8H15a1,1,0,0,1-1-1ZM18,19a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V5A1,1,0,0,1,7,4h5V7a3,3,0,0,0,3,3h3Zm-3-3H9a1,1,0,0,0,0,2h6a1,1,0,0,0,0-2Z"></path></g></svg>
    <h2 class="fw-bold m-0">Student Information</h2>
  </header>

  <div class="d-flex gap-3">
    <%= render @student %>

    <!-- Guardians -->
    <div class="d-flex flex-column border shadow-sm rounded-4 p-4 overflow-hidden mb-3" style="max-height: 290px;">

      <div class="d-flex gap-2 align-items-center mb-3">
        <h3 class="m-0 fw-semibold">Guardians</h3>
        <span class="badge bg-primary rounded-pill fs-6">
          <%= @student.student_guardians.count %>
        </span>
      </div>
      
      <div class="table-responsive overflow-auto scrollbar-thin">
        <table class="table table-striped table-hover">
          <thead class="sticky-top">
            <tr>
              <th class="text-secondary fw-normal">Name</th>
              <th class="text-secondary fw-normal">Relationship</th>
              <th class="text-secondary fw-normal"></th>
            </tr>
          </thead>
          <tbody>
            <% @student.student_guardians.each do |student_guardian| %>
              <tr class="fw-medium">
                <td><%= student_guardian.guardian.name %></td>
                <td><%= student_guardian.relationship %></td>
                <td><%= link_to "Show", student_guardian.guardian, class: "btn btn-sm btn-outline-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
              
  </div>
</div>

<!-- Table -->
<div class="flex-grow-1 border rounded-4 p-4 shadow-sm mb-3 d-flex flex-column overflow-hidden">
  <div class="d-flex gap-2 align-items-center mb-3">
    <h3 class="m-0 fw-semibold">Subjects List</h3>
    <span class="badge bg-primary rounded-pill fs-6">
      <%= @student.classlists.count %>
    </span>
  </div>
  <div class="table-responsive overflow-auto scrollbar-thin">
    <table class="table table-striped table-hover">
      <thead class="sticky-top">
        <tr>
          <th class="text-secondary fw-normal">Section</th>
          <th class="text-secondary fw-normal">Subject</th>
          <th class="text-secondary fw-normal">Units</th>
          <th class="text-secondary fw-normal">Teacher</th>
        </tr>
      </thead>
      <tbody>
        <% @student.classlists.each do |classlist| %>
          <tr class="fw-medium">
            <td><%= classlist.section.name %></td>
            <td><%= classlist.section.subject.name %></td>
            <td><%= classlist.section.subject.number_of_units %></td>
            <td><%= classlist.section.subject.teacher.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Buttons -->
<div class="d-flex justify-content-between">
  <div>
  <%= link_to "Back to students", students_path, class: "btn btn-secondary" %>
    </div>
  <div class="d-flex gap-3">
    <%= button_to "Destroy this student", @student, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
    <%= link_to "Edit this student", edit_student_path(@student), class: "btn btn-success" %>
  </div>
</div>
