<div id="homepage-body" data-bs-spy="scroll" data-bs-target="#topNav" data-bs-smooth-scroll="true" tabindex="0">

  <!-- NAVBAR -->
  <header class="site-header fixed-top mt-0 shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-dark mt-1" id="topNav">
      <div class="container-fluid px-5">
