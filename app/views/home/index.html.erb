<div id="homepage-body" data-bs-spy="scroll" data-bs-target="#topNav" data-bs-smooth-scroll="true" tabindex="0">

  <!-- NAVBAR -->
  <header class="site-header fixed-top mt-0 shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-dark mt-1" id="topNav">
      <div class="container-fluid px-5">
        <a class="navbar-brand d-flex align-items-center gap-2" href="/">
          <svg width="40px" height="40px" viewBox="-1.5 -1.5 18.00 18.00" fill="none" xmlns="http://www.w3.org/2000/svg"
            stroke="#FFFFFF" stroke-width="1">
            <path
              d="M7.5 4.5L11.5 6.5V14.5H3.5V6.5L7.5 4.5ZM7.5 4.5V0M0 14.5H15M1.5 14.5V8.5H3.5M13.5 14.5V8.5H11.5M6.5 14.5V11.5H8.5V14.5M7.5 0.5H10.5V2.5H7.5M7.5 9.5C6.94772 9.5 6.5 9.05228 6.5 8.5C6.5 7.94772 6.94772 7.5 7.5 7.5C8.05228 7.5 8.5 7.94772 8.5 8.5C8.5 9.05228 8.05228 9.5 7.5 9.5Z"
              stroke="#FFFFFF"></path>
          </svg>
          <strong class="fs-3 m-0">School Manager</strong>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav-collapse">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="nav-collapse">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center gap-2 nav-custom">
            <li class="nav-item"><a class="nav-link px-3" href="#hero">Home</a></li>
            <li class="nav-item"><a class="nav-link px-3" href="#highlights">Highlights</a></li>
            <li class="nav-item"><a class="nav-link px-3" href="#features">Features</a></li>
            <li class="nav-item"><a class="nav-link px-3" href="#benefits">Benefits</a></li>
            <li class="nav-item"><a class="nav-link px-3" href="#social-proof">Trusted By</a></li>
            <li class="nav-item"><a class="btn btn-outline-light rounded-pill px-3 py-1" href="#call-to-action">Get
                Started</a></li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <!-- NAVBAR END -->

  <!-- HERO SECTION -->
  <section id="hero" class="scroll-point hero-section d-flex align-items-center overflow-hidden">
    <div id="schoolCarousel" class="carousel slide carousel-fade h-100" data-bs-ride="carousel" data-bs-interval="4000">
      <div class="carousel-inner h-100">

        <!-- Slide 1 -->
        <div class="carousel-item active d-flex h-100">
          <%= image_tag "adnu1.jpeg" , class: "d-block w-100 h-100 hero-img" , alt: "campus" %>
            <div class="hero-overlay d-flex flex-column justify-content-center align-items-start px-4 px-md-5">
              <h1 class="display-5 fw-bold headline">Welcome to <span class="text-accent">School Manager</span></h1>
              <p class="lead text-light mb-4">Empowering your school community with modern tools for administration,
                learning, and collaboration.</p>
              <div class="d-flex gap-3">
                <%= link_to 'Explore Courses' , '#programs' , class: "btn btn-white rounded-pill px-4 py-2" %>
                  <%= link_to 'View Dashboard' , subjects_path, class: "btn btn-outline-light rounded-pill px-4 py-2" %>
              </div>
            </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item d-flex h-100">
          <%= image_tag "adnu2.jpg" , class: "d-block w-100 h-100 hero-img" , alt: "students" %>
            <div class="hero-overlay d-flex flex-column justify-content-center align-items-start px-4 px-md-5">
              <h2 class="fw-bold headline">Engaged Students, Better Outcomes</h2>
              <p class="lead text-light">Collaboration, assessment, and attendance‚Äîcentralized for educators and
                students.</p>
            </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item d-flex h-100">
          <%= image_tag "adnu3.jpg" , class: "d-block w-100 h-100 hero-img" , alt: "facilities" %>
            <div class="hero-overlay d-flex flex-column justify-content-center align-items-start px-4 px-md-5">
              <h2 class="fw-bold headline">Modern Campus Facilities</h2>
              <p class="lead text-light">Spaces and systems built for learning and growth.</p>
            </div>
        </div>

      </div>

    </div>
  </section>
  <!-- HERO SECTION END -->

  <!-- HIGHLIGHTS / STATS SECTION -->
  <section id="highlights" class="scroll-point d-flex align-items-center bg-light">
    <div class="container">
      <h2 class="text-center text-accent mb-5">Campus Highlights</h2>
      <div class="row align-items-center g-5">
        <div class="col-md-6">
          <%= image_tag 'adnu2.jpg' , class: "img-fluid rounded-4 shadow-sm" , alt: "campus life" %>
        </div>
        <div class="col-md-6">
          <h4 class="fw-bold">Vibrant Campus Life</h4>
          <p class="text-muted mb-4">Join organizations, events, and communities that enhance leadership and personal
            development.</p>
          <h4 class="fw-bold">Modern Facilities</h4>
          <p class="text-muted">Equipped with technology-driven spaces supporting academic success.</p>
          <div class="d-flex gap-4 mt-4">
            <div class="text-center">
              <h3 class="fw-bold text-primary">20+</h3>
              <p class="text-muted">Schools Using Platform</p>
            </div>
            <div class="text-center">
              <h3 class="fw-bold text-primary">10,000+</h3>
              <p class="text-muted">Students Managed</p>
            </div>
            <div class="text-center">
              <h3 class="fw-bold text-primary">99.9%</h3>
              <p class="text-muted">Uptime</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- HIGHLIGHTS / STATS SECTION END -->

  <!-- FEATURES SECTION -->
  <section id="features" class="scroll-point d-flex align-items-center">
    <div class="container">
      <h2 class="text-center text-primary mb-5">Features</h2>
      <div class="row g-4">
        <% [ ["Student Management", "Enrollments, attendance, grades." , "üë©‚Äçüè´" ], ["Teacher
          Tools", "Class schedules, grading, announcements." , "üßë‚Äçüè´" ], ["Department
          Control", "Roles, permissions, and performance." , "üè¢" ], ["School
          Administration", "Finances, HR, and staff management." , "üè´" ], ["Analytics
          Dashboard", "Visual insights and reports." , "üìä" ], ["Mobile Ready", "Manage on the go." , "üì±" ] ].each do
          |title, desc, icon| %>
          <div class="col-md-4">
            <div class="card shadow-sm rounded-4 h-100 border-0 text-center p-4">
              <div class="display-4 mb-3">
                <%= icon %>
              </div>
              <h5 class="fw-semibold">
                <%= title %>
              </h5>
              <p class="text-muted">
                <%= desc %>
              </p>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </section>
  <!-- FEATURES SECTION END -->

  <!-- BENEFITS SECTION -->
  <section id="benefits" class="scroll-point d-flex align-items-center bg-light">
    <div class="container">
      <h2 class="text-center text-accent mb-5">Benefits</h2>
      <div class="row g-5 align-items-center">
        <div class="col-md-6 order-md-2">
          <%= image_tag 'adnu3.jpg' , class: "img-fluid rounded-4 shadow-sm" , alt: "benefits" %>
        </div>
        <div class="col-md-6 order-md-1">
          <ul class="list-unstyled fs-5 text-muted">
            <li class="mb-3">‚úÖ Reduce paperwork by 70%</li>
            <li class="mb-3">‚úÖ Real-time tracking of student performance</li>
            <li class="mb-3">‚úÖ Empower collaboration between staff and parents</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  <!-- BENEFITS SECTION END -->

  <!-- SOCIAL PROOF SECTION -->
  <section id="social-proof" class="scroll-point d-flex flex-column justify-content-center bg-light py-5">
    <div class="container">
  
      <!-- PARTNERS CAROUSEL -->
      <h2 class="text-primary text-center mb-4">Our Partners & Integrations</h2>
      <div id="partnersCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
        <div class="carousel-inner">
          <% logos=[ ['partner1.png', 'Partner 1' ], ['partner2.png', 'Partner 2' ], ['partner3.png', 'Partner 3' ],
            ['partner4.png', 'Partner 4' ], ['partner5.png', 'Partner 5' ], ['partner6.png', 'Partner 6' ] ] %>
  
            <% logos.each_slice(3).with_index do |slice, idx| %>
              <div class="carousel-item <%= 'active' if idx == 0 %>">
                <div class="d-flex justify-content-center align-items-center gap-5">
                  <% slice.each do |img, alt| %>
                    <%= image_tag img, class: "partner-logo" , alt: alt, style: "max-height:80px;" %>
                      <% end %>
                </div>
              </div>
              <% end %>
        </div>
      </div>
      <!-- PARTNERS CAROUSEL END -->
  
      <!-- TESTIMONIALS CAROUSEL -->
      <h2 class="text-accent text-center mt-5 mb-4">What Our Users Say</h2>
      <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% [ ["Maria Cruz, Principal", "This system streamlined our enrollment process!" ], ["John Santos,
            Teacher", "Attendance and grading have never been easier." ], ["Anna Lopez,
            Admin", "Our school operations are now more efficient than ever." ] ].each_with_index do |(name, quote), idx|
            %>
            <div class="carousel-item <%= 'active' if idx == 0 %>">
              <div class="card border-0 shadow-sm mx-auto" style="max-width:500px;">
                <div class="card-body text-center">
                  <p class="card-text fst-italic">‚Äú<%= quote %>‚Äù</p>
                  <h6 class="fw-semibold mt-3">
                    <%= name %>
                  </h6>
                </div>
              </div>
            </div>
            <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <!-- TESTIMONIALS CAROUSEL END -->
  
    </div>
  </section>  
  <!-- SOCIAL PROOF SECTION END-->

  <!-- CALL TO ACTION -->
  <section id="call-to-action" class="scroll-point py-5 bg-gradient-cta align-items-center justify-content-center">
    <div class="cta-container rounded-4 shadow">
      <div class="d-flex align-items-center gap-5">

        <!-- LEFT SIDE -->
        <div class="col-md-7 mb-4 mb-md-0 cta-left-content">
          <h1 class="fw-bold mb-4">
            Manage your school with ease, <br>
            using an all-in-one School system.
          </h1>
          
          <div class="d-flex gap-5">
            <p class="mb-2">
              <i class="bi bi-check-circle-fill"></i>
              <span> Built for all types of schools </span>
            </p>
            <p class="mb-4">
              <i class="bi bi-check-circle-fill"></i>
              Easy to use. Powerful. Flexible.
            </p>
          </div>
        </div>

        <!-- RIGHT SIDE -->
        <div class="col-md-5 text-md-start text-center">
          <p class="mb-4">
            By simplifying enrollment, scheduling, and record-keeping,<br>
            our platform makes school management smoother than ever.
          </p>

          <%= link_to subjects_path, class: "btn btn-dark rounded-pill px-4 py-3" do %>
            <span> Get Started </span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-right" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M14 2.5a.5.5 0 0 0-.5-.5h-6a.5.5 0 0 0 0 1h4.793L2.146 13.146a.5.5 0 0 0 .708.708L13 3.707V8.5a.5.5 0 0 0 1 0z"/>
            </svg>
          <% end %>
        </div>

      </div>
    </div>
  </section>
  <!-- CALL TO ACTION END -->

  <!-- FOOTER -->
  <footer id="footer" class="bg-dark text-white py-4">
    <div class="container text-center small">
      ¬© <%= Time.current.year %> School Manager ‚Äî All Rights Reserved
        <br />
        <span>Built by Gonzales, Santiago, Tipay</span>
    </div>
  </footer>
  <!-- FOOTER END -->

</div>