<div data-bs-spy="scroll" data-bs-target="#topNav" data-bs-smooth-scroll="true" tabindex="0">

  <!-- NAVBAR -->
  <header class="site-header fixed-top">
    <nav class="navbar navbar-expand-lg" id="topNav">
      <div class="container-fluid px-5">
        <a class="navbar-brand d-flex align-items-center gap-2" href="#hero">
          <svg width="36" height="36" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="me-2">
            <path d="M12 2L3 7v6c0 5 4 9 9 9s9-4 9-9V7l-9-5z" stroke="white" stroke-width="1" fill="none"></path>
            <circle cx="12" cy="10" r="1.5" fill="white"></circle>
          </svg>
          <strong class="brand-name">School Manager</strong>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav-collapse">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse navbar-dark" id="nav-collapse">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
            <li class="nav-item"><a class="nav-link" href="#hero">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="#news">News</a></li>
            <li class="nav-item"><a class="nav-link" href="#courses">Courses</a></li>
            <li class="nav-item">
              <%= link_to 'Sections' , sections_path, class: "nav-link" %>
            </li>
            <li class="nav-item ms-3">
              <%= link_to 'Get Started' , students_path, class: "btn btn-outline-light rounded-pill px-4 py-2" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <!-- NAVBAR END -->

  <!--  HERO SECTION -->
  <section id="hero" class="hero-section overflow-hidden">
    <div id="schoolCarousel" class="carousel slide carousel-fade h-100" data-bs-ride="carousel" data-bs-interval="4000">
      <div class="carousel-inner h-100">

        <!-- Slide 1 -->
        <div class="carousel-item active h-100">
          <%= image_tag "adnu1.jpeg" , class: "d-block w-100 h-100 hero-img" , alt: "campus" %>
            <div class="hero-overlay d-flex flex-column justify-content-center align-items-start px-4 px-md-5">
              <h1 class="display-5 fw-bold headline">Welcome to <span class="text-accent">School Manager</span></h1>
              <p class="lead text-light mb-4">Empowering your school community with modern tools for administration,
                learning, and collaboration.</p>
              <div class="d-flex gap-3">
                <%= link_to 'Explore Courses' , '#courses' , class: "btn btn-white rounded-pill px-4 py-2" %>
                  <%= link_to 'View Dashboard' , subjects_path, class: "btn btn-outline-light rounded-pill px-4 py-2" %>
              </div>
            </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item h-100">
          <%= image_tag "adnu2.jpg" , class: "d-block w-100 h-100 hero-img" , alt: "students" %>
            <div class="hero-overlay d-flex flex-column justify-content-center align-items-start px-4 px-md-5">
              <h2 class="fw-bold headline">Engaged Students, Better Outcomes</h2>
              <p class="lead text-light">Collaboration, assessment, and attendance—centralized for educators and
                students.</p>
            </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item h-100">
          <%= image_tag "adnu3.jpg" , class: "d-block w-100 h-100 hero-img" , alt: "facilities" %>
            <div class="hero-overlay d-flex flex-column justify-content-center align-items-start px-4 px-md-5">
              <h2 class="fw-bold headline">Modern Campus Facilities</h2>
              <p class="lead text-light">Spaces and systems built for learning and growth.</p>
            </div>
        </div>
      </div>

      <!-- Carousel Controls -->
      <button class="carousel-control-prev" type="button" data-bs-target="#schoolCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#schoolCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </section>
  <!-- HERO SECTION END -->

  <!-- HIGHLIGHTS SECTION -->
  <section id="highlights" class="py-5 bg-white">
    <div class="container">
      <h2 class="text-center section-title text-accent mb-5">Campus Highlights</h2>
      <div class="row align-items-center g-5">
        <div class="col-md-6">
          <%= image_tag 'adnu2.jpg' , class: "img-fluid rounded-4 shadow-sm" , alt: "campus life" %>
        </div>
        <div class="col-md-6">
          <h4 class="fw-bold">Vibrant Campus Life</h4>
          <p class="text-muted mb-4">Join organizations, events, and communities that enhance leadership and personal
            development.</p>
          <h4 class="fw-bold">Modern Facilities</h4>
          <p class="text-muted">Equipped with technology-driven spaces supporting academic success.</p>
        </div>
      </div>
    </div>
  </section>
  <!-- HIGHLIGHTS SECTION END -->

  <!-- ACCREDITATIONS -->

  <!-- ACCREDITATIONS END -->

  <!-- PROGRAMS SECTION -->
  <section id="courses" class="py-5 bg-light">
    <div class="container">
      <h2 class="text-center section-title text-primary mb-4">Courses Offered</h2>
      <div class="row g-4">
        <% [ ["BS Computer Engineering", "Hardware, software, and embedded systems." ], ["BS Information
          Technology", "Networking, databases, and software development." ], ["BS
          Education", "Become an educator for the digital age." ] ].each do |course, desc| %>
          <div class="col-md-4">
            <div class="card shadow-sm rounded-4 h-100 border-0">
              <div class="card-body d-flex flex-column">
                <h5 class="fw-semibold">
                  <%= course %>
                </h5>
                <p class="text-muted flex-grow-1">
                  <%= desc %>
                </p>
                <div class="mt-3">
                  <%= link_to 'Learn More' , '#' , class: 'btn btn-outline-primary btn-sm rounded-pill' %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </section>
  <!-- PROGRAMS SECTION -->

  <!-- NEWS SECTION -->
  <section id="news" class="py-5 bg-white">
    <div class="container">
      <h2 class="text-center section-title text-accent mb-4">Latest News</h2>
      <div class="row g-4">
        <% [ ["New Academic Year Begins", "The new semester starts next week. Students should check schedules early." ],
          ["Library Renovation", "Our library now features collaborative learning spaces and new technology." ],
          ["Teacher Orientation", "We welcome new faculty joining our academic community this year." ] ].each do |title,
          desc| %>
          <div class="col-md-4">
            <article class="card feature-card h-100 border-0">
              <div class="card-body">
                <h5 class="fw-semibold">
                  <%= title %>
                </h5>
                <p class="text-muted">
                  <%= desc %>
                </p>
              </div>
            </article>
          </div>
          <% end %>
      </div>
    </div>
  </section>
  <!-- NEWS SECTION END -->


  <!-- CALL TO ACTION -->
  <section class="py-5 bg-gradient-cta">
    <div class="container text-center">
      <h3 class="text-white fw-bold mb-3">Ready to explore?</h3>
      <p class="text-white-75 mb-4">Discover courses, view sections, and manage your school with ease.</p>
      <%= link_to 'Get Started' , subjects_path, class: "btn btn-white btn-lg rounded-pill px-4" %>
    </div>
  </section>
  <!-- CALL TO ACTION END -->


  <!-- FOOTER -->
  <footer class="bg-dark text-white py-4 mt-5">
    <div class="container text-center small">
      © <%= Time.current.year %> School Manager — All Rights Reserved
        <br />
        <span class="text-muted">Built with Ruby on Rails & Bootstrap</span>
    </div>
  </footer>
  <!-- FOOTER END -->


</div>