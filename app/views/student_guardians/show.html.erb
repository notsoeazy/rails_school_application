<!-- Header -->
<div>
  <header class="d-flex align-items-center gap-2 mb-3">
    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24"><path fill="#000000" d="M7 9a2.5 2.5 0 1 0 0-5a2.5 2.5 0 0 0 0 5Zm0 2a4.5 4.5 0 1 1 0-9a4.5 4.5 0 0 1 0 9Zm10.5 2a2 2 0 1 0 0-4a2 2 0 0 0 0 4Zm0 2a4 4 0 1 1 0-8a4 4 0 0 1 0 8Zm2.5 6v-.5a2.5 2.5 0 0 0-5 0v.5h-2v-.5a4.5 4.5 0 1 1 9 0v.5h-2Zm-10 0v-4a3 3 0 1 0-6 0v4H2v-4a5 5 0 0 1 10 0v4h-2Z"/></svg>
    <h2 class="fw-bold m-0">Student Guardian Information</h2>
  </header>

  <div class="d-flex">
    <%= render @student_guardian %>
  </div>
</div>

<!-- Content -->
<div class="border shadow-sm p-4 rounded-4 flex-grow-1 overflow-auto scrollbar-thin mb-3">

  <!-- Student Content -->
  <div class="d-flex align-items-center">
    <h3 class="mb-1 fw-semibold">Student Info</h3>
  </div>
  <div class="card border-0 shadow-sm rounded-4 mb-3 overflow-hidden transition-all">

    <!-- Student Header -->
    <div class="bg-primary text-white d-flex align-items-center justify-content-between p-3"
        role="button"
        data-bs-toggle="collapse"
        data-bs-target="#student_guardian-student-<%= @student_guardian.student.id %>"
        aria-expanded="false"
        aria-controls="student_guardian-student-<%= @student_guardian.student.id %>">
      <div class="d-flex align-items-center gap-3">
        <div>
          <h4 class="mb-0 fw-semibold"><%= @student_guardian.student.name %></h4>
          <small class="mb-0 opacity-75">
            <%= @student_guardian.student.department.name %> - <%= @student_guardian.student.program %>
          </small>
        </div>
      </div>
      <div class="d-flex align-items-center gap-2">
        <svg fill="#ffffff" width="28px" height="28px" class="collapse-icon opacity-50"
              viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
          <path d="M11.125 16.313l7.688-7.688 3.594 3.719-11.094 11.063
            -11.313-11.313 3.5-3.531z"></path>
        </svg>
      </div>
    </div>

    <!-- Student Body -->
    <div id="student_guardian-student-<%= @student_guardian.student.id %>" class="collapse">
      <div class="flex-grow-1 d-flex align-items-center p-4">
        <div class="row w-100 text-center g-3">
          <div class="col-12 col-md-4">
            <p class="text-secondary small mb-1">Year Level</p>
            <h5><%= @student_guardian.student.year_level %></h5>
          </div>
          <div class="col-12 col-md-4">
            <p class="text-secondary small mb-1">Number of Units</p>
            <h5><%= @student_guardian.student.number_of_units %></h5>
          </div>
          <div class="col-12 col-md-4">
            <p class="text-secondary small mb-1">Total Assessment</p>
            <h5><%= number_to_currency(@student_guardian.student.total_assessment, precision: 2, unit: 'â‚±', delimiter:',') %></h5>
          </div>
        </div>
      </div>
      <div class="bg-light d-flex justify-content-end align-items-center gap-2 pt-3 pb-3 pe-4">
        <%= link_to "Edit", edit_student_path(@student_guardian.student), class: "btn btn-outline-secondary rounded-pill px-3" %>
        <%= link_to "Show", @student_guardian.student, class: "btn btn-outline-primary rounded-pill px-3" %>
      </div>
    </div>
  </div>

  <!-- Guardian Content -->
  <div class="d-flex align-items-center">
    <h3 class="mb-1 fw-semibold">Guardian Info</h3>
  </div>
  <div class="card border-0 shadow-sm rounded-4 mb-3 overflow-hidden transition-all">
  
    <!-- Guardian Header -->
    <div class="bg-primary text-white d-flex align-items-center justify-content-between p-3"
        role="button"
        data-bs-toggle="collapse"
        data-bs-target="#student_guardian-guardian-<%= @student_guardian.guardian.id %>"
        aria-expanded="false"
        aria-controls="student_guardian-guardian-<%= @student_guardian.guardian.id %>">
      <div class="d-flex align-items-center gap-3">
        <div>
          <h4 class="m-0 fw-semibold"><%= @student_guardian.guardian.name %></h4>
          <small class="opacity-75">
            <%= @student_guardian.guardian.email_address %> - <%= @student_guardian.guardian.contact_number %>
          </small>
        </div>
      </div>
        <svg fill="#ffffff" width="28px" height="28px" class="collapse-icon opacity-50"
              viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
          <path d="M11.125 16.313l7.688-7.688 3.594 3.719-11.094 11.063
            -11.313-11.313 3.5-3.531z"></path>
        </svg>
      </div>
    </div>
    
    <!-- Section Body -->
    <div id="student_guardian-guardian-<%= @student_guardian.guardian.id %>" class="collapse">
      <div class="table-responsive p-4 overflow-auto scrollbar-thin">
        <table class="table table-striped table-hover m-0">
          <thead class="sticky-top">
            <tr>
              <th class="text-secondary fw-normal" style="width: 50%">Name</th>
              <th class="text-secondary fw-normal" style="width: 50%">Relationship</th>
            </tr>
          </thead>
          <tbody>
            <% @student_guardian.guardian.student_guardians.each do |student_guardian| %>
              <tr class="fw-medium">
                <td><%= student_guardian.student.name %></td>
                <td><%= student_guardian.relationship %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="bg-light d-flex justify-content-end align-items-center gap-2 pt-3 pb-3 pe-4">
          <%= link_to "Edit", edit_guardian_path(@student_guardian.guardian), class: "btn btn-outline-secondary rounded-pill px-3" %>
          <%= link_to "Show", @student_guardian.guardian, class: "btn btn-outline-primary rounded-pill px-3" %>
        </div> 
      </div>
    </div>
  </div>

  <!-- Buttons -->
  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Back to student guardians", student_guardians_path, class: "btn btn-secondary" %>
    </div>
    <div class="d-flex gap-3">
      <%= button_to "Destroy this student guardian", @student_guardian, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
      <%= link_to "Edit this student guardian", edit_student_guardian_path(@student_guardian), class: "btn btn-success" %>
    </div>
  </div>
</div>
