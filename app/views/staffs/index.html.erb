<% content_for :title, "Staffs" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div class="d-flex align-items-center gap-3">
    <h2 class="fw-bold m-0">Staff List</h2>
    <span class="badge bg-primary rounded-pill fs-6">
      <%= @staffs.count %>
    </span>
  </div>
  <%= link_to new_staff_path, class: "btn btn-success rounded-pill" do %>
    <svg width="26px" height="26px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="#000000">
      <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
      <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
      <line fill="none" stroke="#FFFFFF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="12" x2="12" y1="19" y2="5"></line> <line fill="none" stroke="#FFFFFF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="5" x2="19" y1="12" y2="12"></line>
    </svg>
    <span>New Staff</span>
  <% end %>
</div>

<!-- Content -->
<div class="border shadow-sm p-4 rounded-4 flex-grow-1 overflow-auto scrollbar-thin">
  <% @departments.each do |department| %>
    <div class="mb-3 rounded-4 shadow-sm border bg-white overflow-hidden">
      <!-- Department Header -->
      <div 
        class="bg-light p-3 d-flex align-items-center justify-content-between border-bottom"
        role="button" 
        data-bs-toggle="collapse" 
        data-bs-target="#department-<%= department.id %>" 
        aria-expanded="true" 
        aria-controls="department-<%= department.id %>"
      >
        <div class="d-flex align-items-center gap-3">
          <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center p-1">
            <svg width="50px" height="50px" viewBox="0 0 24 24" fill="#0F6DF7" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M20.6092 8.34165L12.0001 3.64575L3.39093 8.34165L3.75007 9.75007H5.25007V15.7501H4.50007V17.2501H19.5001V15.7501H18.7501V9.75007H20.2501L20.6092 8.34165ZM6.75007 15.7501V9.75007H9.00007V15.7501H6.75007ZM10.5001 15.7501V9.75007H13.5001V15.7501H10.5001ZM15.0001 15.7501V9.75007H17.2501V15.7501H15.0001ZM12.0001 5.35438L17.3088 8.25007H6.69131L12.0001 5.35438ZM3 19.5001H21V18.0001H3V19.5001Z" fill="#ffffff"></path>
            </svg>
          </div>
          <div>
            <h4 class="m-0 fw-semibold"><%= department.name %></h4>
            <small class="text-muted"><%= pluralize(department.staffs.count, "Staff") %></small>
          </div>
        </div>
        <svg class="collapse-icon opacity-25 transition" fill="#000000" width="26px" height="26px" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
          <path d="M11.125 16.313l7.688-7.688 3.594 3.719-11.094 11.063-11.313-11.313 3.5-3.531z"></path>
        </svg>
      </div>

      <!-- Department Body -->
      <div id="department-<%= department.id %>" class="collapse show">
        <div class="p-4">
          <% if department.staffs.any? %>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
              <% department.staffs.each do |staff| %>
                <div class="col">
                  <div id="staff-entry-card" class="card border shadow-sm rounded-4 overflow-hidden h-100">
                    <!-- Staff Upper Section -->
                    <div class="bg-primary text-white d-flex gap-3 align-items-center p-3">
                      <div class="bg-white bg-opacity-25 p-2 rounded-circle d-flex align-items-center justify-content-center">
                        <svg width="40px" height="40px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path fill="#ffffff" d="M12 12c2.761 0 5-2.239 5-5S14.761 2 12 2 7 4.239 7 7s2.239 5 5 5zm-8 8c0-3.313 2.687-6 6-6h4c3.313 0 6 2.687 6 6v2H4v-2z"/>
                        </svg>
                      </div>
                      <div>
                        <h5 class="mb-0 fw-bold"><%= staff.name %></h5>
                        <small class="opacity-75"><%= staff.email %></small>
                      </div>
                    </div>

                    <!-- Staff Main Section -->
                    <div class="card-body d-flex flex-column gap-2">
                      <div class="d-flex justify-content-between">
                        <span class="fw-semibold text-secondary">Status:</span>
                        <span class="fw-bold"><%= staff.status %></span>
                      </div>
                      <div class="d-flex justify-content-between">
                        <span class="fw-semibold text-secondary">Monthly Salary:</span>
                        <span class="fw-bold">
                          <%= number_to_currency(staff.monthly_salary, precision: 2, unit: 'â‚±', delimiter: ',') %>
                        </span>
                      </div>
                    </div>

                    <!-- Staff Lower Section-->
                    <div class="card-footer bg-light border-0 d-flex gap-2 justify-content-end">
                      <%= link_to "Edit", edit_staff_path(staff), class: "btn btn-outline-secondary rounded-pill px-3" %>
                      <%= link_to "Show", staff, class: "btn btn-outline-primary rounded-pill px-3" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted fst-italic">No staffs in this department yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
