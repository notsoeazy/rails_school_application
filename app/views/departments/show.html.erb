<!-- Header -->
<div>
  <header class="d-flex align-items-center gap-2 mb-3">
    <svg fill="#000000" width="50px" height="50px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M9,10h1a1,1,0,0,0,0-2H9a1,1,0,0,0,0,2Zm0,2a1,1,0,0,0,0,2h6a1,1,0,0,0,0-2ZM20,8.94a1.31,1.31,0,0,0-.06-.27l0-.09a1.07,1.07,0,0,0-.19-.28h0l-6-6h0a1.07,1.07,0,0,0-.28-.19.32.32,0,0,0-.09,0A.88.88,0,0,0,13.05,2H7A3,3,0,0,0,4,5V19a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V9S20,9,20,8.94ZM14,5.41,16.59,8H15a1,1,0,0,1-1-1ZM18,19a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V5A1,1,0,0,1,7,4h5V7a3,3,0,0,0,3,3h3Zm-3-3H9a1,1,0,0,0,0,2h6a1,1,0,0,0,0-2Z"></path></g></svg>
    <h2 class="fw-bold m-0">Department Information</h2>
  </header>

  <%= render @department %>
</div>

<!-- Content -->
<div class="border shadow-sm p-4 rounded-4 flex-grow-1 overflow-auto mb-3 scrollbar-thin">

  <!-- Students Section -->
  <div class="card border-0 shadow-sm rounded-4 mb-3 overflow-hidden transition-all">
    <div class="bg-primary text-white d-flex align-items-center justify-content-between p-3"
         role="button"
         data-bs-toggle="collapse"
         data-bs-target="#students-list"
         aria-expanded="false"
         aria-controls="students-list">
      <div class="d-flex align-items-center gap-3">
        <h4 class="m-0 fw-semibold">Students List</h4>
        <span class="badge bg-white text-dark rounded-pill fs-6 px-3">
          <%= @department.students.count %>
        </span>
      </div>
      <svg fill="#ffffff" width="30px" height="30px" class="collapse-icon opacity-50"
           viewBox="0 0 32 32" version="1.1"
           xmlns="http://www.w3.org/2000/svg">
        <title>down</title>
        <path d="M11.125 16.313l7.688-7.688 3.594 3.719-11.094 11.063-11.313-11.313 3.5-3.531z"></path>
      </svg>
    </div>

    <div id="students-list" class="collapse">
      <div class="table-responsive p-4 overflow-auto scrollbar-thin">
        <% if @department.students.any? %>
          <table class="table table-striped table-hover m-0">
            <thead class="sticky-top bg-white">
              <tr>
                <th class="text-secondary fw-normal">Name</th>
                <th class="text-secondary fw-normal">Program</th>
                <th class="text-secondary fw-normal">Year Level</th>
                <th class="text-secondary fw-normal">Total Assessment</th>
                <th class="text-secondary fw-normal">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @department.students.each do |student| %>
                <tr class="fw-medium">
                  <td><%= student.name %></td>
                  <td><%= student.program %></td>
                  <td><%= student.year_level %></td>
                  <td><%= number_to_currency(student.total_assessment, precision: 2, unit: '₱', delimiter: ',') %></td>
                  <td class="d-flex gap-2">
                    <%= link_to "Show", student, class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Edit", edit_student_path(student), class: "btn btn-sm btn-outline-secondary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="text-center text-secondary py-4">
            <em>No students in this department yet.</em>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Teachers Section -->
  <div class="card border-0 shadow-sm rounded-4 mb-3 overflow-hidden transition-all">
    <div class="bg-primary text-white d-flex align-items-center justify-content-between p-3"
         role="button"
         data-bs-toggle="collapse"
         data-bs-target="#teachers-list"
         aria-expanded="false"
         aria-controls="teachers-list">
      <div class="d-flex align-items-center gap-3">
        <h4 class="m-0 fw-semibold">Teachers List</h4>
        <span class="badge bg-white text-dark rounded-pill fs-6 px-3">
          <%= @department.teachers.count %>
        </span>
      </div>
      <svg fill="#ffffff" width="30px" height="30px" class="collapse-icon opacity-50"
           viewBox="0 0 32 32" version="1.1"
           xmlns="http://www.w3.org/2000/svg">
        <title>down</title>
        <path d="M11.125 16.313l7.688-7.688 3.594 3.719-11.094 11.063-11.313-11.313 3.5-3.531z"></path>
      </svg>
    </div>

    <div id="teachers-list" class="collapse">
      <div class="table-responsive p-4 overflow-auto scrollbar-thin">
        <% if @department.teachers.any? %>
          <table class="table table-striped table-hover m-0">
            <thead class="sticky-top bg-white">
              <tr>
                <th class="text-secondary fw-normal">Name</th>
                <th class="text-secondary fw-normal">Email</th>
                <th class="text-secondary fw-normal">Specialization</th>
                <th class="text-secondary fw-normal">Status</th>
                <th class="text-secondary fw-normal">Monthly Salary</th>
                <th class="text-secondary fw-normal">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @department.teachers.each do |teacher| %>
                <tr class="fw-medium">
                  <td><%= teacher.name %></td>
                  <td><%= teacher.email %></td>
                  <td><%= teacher.specialization %></td>
                  <td><%= teacher.status %></td>
                  <td><%= number_to_currency(teacher.monthly_salary, precision: 2, unit: '₱', delimiter: ',') %></td>
                  <td class="d-flex gap-2">
                    <%= link_to "Show", teacher, class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Edit", edit_teacher_path(teacher), class: "btn btn-sm btn-outline-secondary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="text-center text-secondary py-4">
            <em>No teachers in this department yet.</em>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Staff Section -->
  <div class="card border-0 shadow-sm rounded-4 mb-3 overflow-hidden transition-all">
    <div class="bg-primary text-white d-flex align-items-center justify-content-between p-3"
         role="button"
         data-bs-toggle="collapse"
         data-bs-target="#staff-list"
         aria-expanded="false"
         aria-controls="staff-list">
      <div class="d-flex align-items-center gap-3">
        <h4 class="m-0 fw-semibold">Staff List</h4>
        <span class="badge bg-white text-dark rounded-pill fs-6 px-3">
          <%= @department.staffs.count %>
        </span>
      </div>
      <svg fill="#ffffff" width="30px" height="30px" class="collapse-icon opacity-50"
           viewBox="0 0 32 32" version="1.1"
           xmlns="http://www.w3.org/2000/svg">
        <title>down</title>
        <path d="M11.125 16.313l7.688-7.688 3.594 3.719-11.094 11.063-11.313-11.313 3.5-3.531z"></path>
      </svg>
    </div>

    <div id="staff-list" class="collapse">
      <div class="table-responsive p-4 overflow-auto scrollbar-thin">
        <% if @department.staffs.any? %>
          <table class="table table-striped table-hover m-0">
            <thead class="sticky-top bg-white">
              <tr>
                <th class="text-secondary fw-normal">Name</th>
                <th class="text-secondary fw-normal">Email</th>
                <th class="text-secondary fw-normal">Status</th>
                <th class="text-secondary fw-normal">Monthly Salary</th>
                <th class="text-secondary fw-normal">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @department.staffs.each do |staff| %>
                <tr class="fw-medium">
                  <td><%= staff.name %></td>
                  <td><%= staff.email %></td>
                  <td><%= staff.status %></td>
                  <td><%= number_to_currency(staff.monthly_salary, precision: 2, unit: '₱', delimiter: ',') %></td>
                  <td class="d-flex gap-2">
                    <%= link_to "Show", staff, class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Edit", edit_staff_path(staff), class: "btn btn-sm btn-outline-secondary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="text-center text-secondary py-4">
            <em>No staff members in this department yet.</em>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>


<!-- Buttons -->
<div class="d-flex justify-content-between">
  <div>
  <%= link_to "Back to departments", departments_path, class: "btn btn-secondary" %>
    </div>
  <div class="d-flex gap-3">
    <%= button_to "Destroy this department", @department, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
    <%= link_to "Edit this department", edit_department_path(@department), class: "btn btn-success" %>
  </div>
</div>