<% content_for :title, "Departments" %>
<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <div class="d-flex align-items-center gap-3">
    <h2 class="fw-bold m-0">Department List</h1>
    <span class="badge bg-primary rounded-pill fs-6">
      <%= @departments.count %>
    </span>
  </div>
  <%= link_to new_department_path, class: "btn btn-success rounded-pill" do %>
    <svg width="26px" height="26px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="#000000">
      <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
      <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
      <line fill="none" stroke="#FFFFFF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="12" x2="12" y1="19" y2="5"></line> <line fill="none" stroke="#FFFFFF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="5" x2="19" y1="12" y2="12"></line>
    </svg>
    <span>New Department</span>
  <% end %>
</div>

<!-- Content -->
<div class="border shadow-sm p-4 rounded-4 flex-grow-1 overflow-hidden">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 overflow-auto h-100">
    <% @departments.each do |department| %>
      <div class="col">
        <div id="department-entry-card" class="card border-0 shadow-sm rounded-4 overflow-hidden">
          <!-- Header -->
          <div class="bg-primary text-white d-flex gap-3 align-items-center p-3">
            <div class="bg-white bg-opacity-25 p-2 rounded-circle d-flex align-items-center justify-content-center">
              <svg width="40px" height="40px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M20.6092 8.34165L12.0001 3.64575L3.39093 8.34165L3.75007 9.75007H5.25007V15.7501H4.50007V17.2501H19.5001V15.7501H18.7501V9.75007H20.2501L20.6092 8.34165ZM6.75007 15.7501V9.75007H9.00007V15.7501H6.75007ZM10.5001 15.7501V9.75007H13.5001V15.7501H10.5001ZM15.0001 15.7501V9.75007H17.2501V15.7501H15.0001ZM12.0001 5.35438L17.3088 8.25007H6.69131L12.0001 5.35438ZM3 19.5001H21V18.0001H3V19.5001Z" fill="#ffffff"></path>
              </svg>
            </div>
            <div>
              <h5 class="mb-0 fw-bold"><%= department.name %></h5>
              <small class="opacity-75"><%= department.location %></small>
            </div>
          </div>

          <!-- Body -->
          <div class="card-body">
            <div class="d-flex flex-column gap-2">
              <div class="d-flex justify-content-between">
                <span class="fw-semibold text-secondary">Employees:</span>
                <span class="fw-bold"><%= department.employee_count %></span>
              </div>
              <div class="d-flex justify-content-between">
                <span class="fw-semibold text-secondary">Students:</span>
                <span class="fw-bold"><%= department.student_count %></span>
              </div>
            </div>
          </div>

          <!-- Footer -->
          <div class="card-footer bg-light border-0 d-flex gap-2 justify-content-end">
            <%= link_to "Edit", edit_department_path(department), class: "btn btn-outline-secondary btn rounded-pill px-3" %>
            <%= link_to "Show", department, class: "btn btn-outline-primary btn rounded-pill px-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

