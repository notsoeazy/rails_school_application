 

<% content_for :title, "Departments" %>

<h1>List of Departments</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Number of Employees</th>
      <th>Number of Students</th>
      <th>Show</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.location %></td>
        <td><%= department.employee_count %></td>
        <td><%= department.student_count %></td>
        <td><%= link_to "Show this department", department %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New department", new_department_path %>
